<div class="mx-auto md:w-2/3 px-8 py-8">
  <h1 class="font-bold text-4xl">Editando Ubicación</h1>

  <%# render "form", location: @location %>

<%# temporary solution to the malformed route location.:id %>
  <%= form_with model: @location, url: update_location_path(@location), method: :patch do |form| %>
    <% if @location.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(@location.errors.count, "error") %> impiden guardar la ubicación:</h2>

        <ul>
          <% @location.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-5">
      <%= form.label :location %>
      <%= form.text_field :location, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5 flex gap-4 items-center">
      <%= form.label "Disponible", class: "mt-2" %>
      <%= form.check_box :available, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2" %>
    </div>

    <div class="flex gap-4">
      <%= form.submit "Guardar", class: "btn-primary" %>
      <%= link_to "Cancelar", locations_path, class: "btn-primary" %>
    </div>
  <% end %>

</div>
