<table class="table-auto border-collapse shadow-lg border rounded my-4 w-full">
  <thead>
    <tr class="bg-blue-50">
      <th class="border border-gray-300 px-4 py-2">Ubicación</th>
      <th class="border border-gray-300 px-4 py-2">Disponible</th>
      <th class="border border-gray-300 px-4 py-2">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="border border-gray-300 px-4 py-2"><%= location.location %></td>
      <td class="border border-gray-300 px-4 py-2"><%= location.available ? 'Sí' : 'No' %></td>
      <%# Temporary solution to the malformed routes locations.:id %>
      <td class="border border-gray-300 px-4 py-2">
        <%= link_to "Editar", edit_location_path(location), class: "underline text-blue" %> |
        <%= link_to "Eliminar", delete_location_path(location), data: { turbo_confirm: "¿Estás seguro?", turbo_method: :delete }, class: "underline" %>
      </td>
    </tr>
  </tbody>
</table>