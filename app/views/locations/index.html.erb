<div class="flex flex-col px-2 w-full mx-auto md:w-3/4">

  <div class="flex flex-col md:flex-row justify-around items-center my-6 gap-4 mx-auto">
    <h1 class="font-bold text-4xl">Ubicaciones</h1>
    <%= link_to "Nueva Ubicación", new_location_path, class: "btn-primary text-center" %>
  </div>

  <%# Search for locations by location.location and available %>

  <!-- Search Form -->
  <%= form_with url: locations_path, method: :get, class: "bg-gray-100 p-6 shadow-md rounded-lg border border-gray-200 lg:w-1/2 mx-auto" do |f| %>
    <div class="flex flex-col md:flex-row gap-4 items-center p-4 rounded-lg">
      <!-- Location Search -->
      <div class="flex flex-col w-full md:w-1/3">
        <label for="location" class="text-sm font-medium text-gray-700">Buscar por ubicación</label>
        <%= f.text_field :location, value: params[:location], class: "mt-1 input-primary w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <!-- Available Checkbox -->
      <div class="flex flex-col gap-2 items-center mt-4 md:mt-0">
        <%= f.label :available, "Disponible", class: "ml-2 text-sm text-gray-700" %>
        <%= f.check_box :available, checked: params[:available] == "true", class: "input-primary focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300 rounded" %>
      </div>
      <!-- Submit Button -->
      <div class="mt-4 md:mt-0">
        <%= f.submit "Buscar", class: "btn-primary" %>
      </div>
    </div>
  <% end %>


  <div id="locations" class="flex flex-col gap-4 justy-center items-center my-6">
    <div class="my-4 flex justify-center border bg-blue-50 rounded-lg px-6 py-2">
      <%= paginate @locations %>
    </div>
    <% @locations.each do |location| %>
       
        <%= render location %>
    <% end %>
    <div class="my-4 flex justify-center border bg-blue-50 rounded-lg px-6 py-2">
      <%= paginate @locations %>
    </div>
  </div>
</div>
