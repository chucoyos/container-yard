<div class="mx-auto md:w-2/3 w-full flex flex-col p-4 bg-gray-50 rounded-lg shadow-md mb-16">
  <% if @role.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-4 py-3 font-medium rounded-lg mt-3">
      <h2 class="font-semibold"><%= pluralize(@role.errors.count, "error") %> prohibited this role from being saved:</h2>
      <ul class="list-disc list-inside mt-2">
        <% @role.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mx-auto mt-8 max-w-2xl">
    <div class="bg-blue-50 shadow-lg rounded-2xl p-6">

      <!-- Header -->
      <h1 class="text-3xl font-bold text-gray-800">Rol</h1>
      <h2 class="mt-2 text-xl font-semibold text-blue-600"><%= @role.name %></h2>

      <!-- Permissions -->
      <div class="mt-6">
        <h3 class="text-lg font-medium text-gray-700">Permisos Otorgados</h3>
        <ul class="mt-3 grid grid-cols-1 sm:grid-cols-2 gap-2">
          <% @role.permissions.each do |permission| %>
            <li class="flex items-center text-gray-700 bg-gray-50 px-3 py-2 rounded-lg shadow-sm">
              <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              <%= permission.name %>
            </li>
          <% end %>
        </ul>
      </div>

      <!-- Actions -->
      <div class="flex flex-wrap gap-3 my-8">
        <%= link_to "Editar", edit_role_path(@role), class: "btn-primary" %>
        <%= link_to "Regresar", roles_path, class: "btn-primary" %>
        <%= button_to "Eliminar", @role, 
              data: { turbo_confirm: "Â¿Quieres eliminar este Rol?" }, 
              method: :delete, 
              class: "btn-danger" %>
      </div>

    </div>
  </div>

</div>

