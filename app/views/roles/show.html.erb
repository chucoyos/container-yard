<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <div class="flex flex-col">
      <h1>Rol</h1>
      <h2 class="my-4"><%= @role.name %></h2>
      <div class="flex gap-2">
        <%= link_to "Editar", edit_role_path(@role), class: "btn-primary" %>
        <%= link_to "Regresar", roles_path, class: "btn-primary" %>
        <%= button_to "Eliminar", @role, method: :delete, class: "btn-primary" %>
      </div>
    </div>
  </div>
</div>
