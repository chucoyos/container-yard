<div class="mx-auto md:w-2/3 w-full flex mb-20">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @move %>

    <%= link_to "Edit this move", edit_move_path(@move), class: "mt-2 btn-primary" %>
    <%= link_to "Back to moves", moves_path, class: "ml-2 btn-primary" %>
    <div class="inline-block ml-2">
      <%= link_to "Destroy this move", @move, data: {turbo_method: :delete, turbo_confirm: "Quieres eliminar el movimiento?"}, class: "mt-2 btn-danger" %>
    </div>
  </div>
</div>
