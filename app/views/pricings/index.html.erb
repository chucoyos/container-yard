<div class="w-full lg:w-3/4 mx-auto">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Pricings" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Pricings</h1>
    <%= link_to "New pricing", new_pricing_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="pricings" class="min-w-full">
    <% @pricings.each do |pricing| %>
      <%= render pricing %>
      <p>
        <%= link_to "Show this pricing", pricing, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
