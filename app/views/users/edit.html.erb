<div class="flex flex-col gap-4 w-full">
  <h1>Editar Usuario</h1>
  <%= form_with model: @user do |f| %>
    <div class="form">
        <div class="input-group">
          <%= f.label 'Nombre' %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>

        <div class="input-group">
          <%= f.label "Apellido Paterno" %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>

        <div class="input-group">
          <%= f.label "Apellido Materno" %>
          <%= f.text_field :second_last_name, class: "form-control" %>
        </div>

        <div class="input-group">
          <%= f.label "Nombre de Usuario" %>
          <%= f.text_field :username, class: "form-control" %>
        </div>

        <div class="input-group">
          <%= f.submit "Actualizar", class: 'btn-primary' %>
        </div>
    </div>
  <% end %>

  <div>
    <%= link_to "Regresar", users_path, class: 'btn-primary' %>
  </div>
</div>