<div class="px-4">
  <h1>Usuario: <%= @user.username %></h1>
  <div class="hidden lg:flex flex-col">
    <table class="table">
      <thead class="bg-slate-200">
        <tr class="border">
          <th class="px-2">Rol</th>
          <th class="px-2">Nombre</th>
          <th class="px-2">Apellido Paterno</th>
          <th class="px-2">Apellido Materno</th>
          <th class="px-2">Nombre de Usuario</th>
          <th class="px-2">Teléfono</th>
          <th class="px-2">Persona de Contacto</th>
          <th class="px-2">Email</th>
        </tr>
      </thead>
      <tbody>
        <tr class="border">
          <td class="px-2"><%= @user.role&.name %></td>
          <td class="px-2"><%= @user.first_name %></td>
          <td class="px-2"><%= @user.last_name %></td>
          <td class="px-2"><%= @user.second_last_name %></td>
          <td class="px-2"><%= @user.username %></td>
          <td class="px-2"><%= @user.phone_number %></td>
          <td class="px-2"><%= @user.contact_person %></td>
          <td class="px-2"><%= @user.email %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="lg:hidden">
    <div class="border p-2 my-2">
      <p><strong>Rol:</strong> <%= @user.role&.name %></p>
      <p><strong>Nombre:</strong> <%= @user.first_name %></p>
      <p><strong>Apellido Paterno:</strong> <%= @user.last_name %></p>
      <p><strong>Apellido Materno:</strong> <%= @user.second_last_name %></p>
      <p><strong>Nombre de Usuario:</strong> <%= @user.username %></p>
      <p><strong>Teléfono:</strong> <%= @user.phone_number %></p>
      <p><strong>Persona de Contacto:</strong> <%= @user.contact_person %></p>
      <p><strong>Email:</strong> <%= @user.email %></p>
    </div>
  </div>
  <div class="flex gap-2 mt-2 my-2">
    <%= link_to "Editar", edit_user_path(@user), class: "btn-primary" %>
    <%= link_to "Eliminar", delete_member_path(@user), data: { turbo_method: :delete, turbo_confirm: "¿Estás seguro de eliminar a #{@user.first_name} #{@user.last_name}? Tambien se perdera la infomacion relacionada a este usuario" }, class: "btn-danger" %>
  </div>
  <div class="mt-4">
    <%= link_to "Regresar", users_path, class: "btn-primary" %>
  </div>
</div>
