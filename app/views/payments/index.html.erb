<div class="w-full lg:w-3/4 mx-auto lg:p-8 p-2">
  <% content_for :title, "Payments" %>

  <div class="flex justify-center items-center">
    <h1 class="font-bold text-4xl">Pagos</h1>
  </div>

  <%# Small devices %>
  <div id="payments" class="min-w-full lg:hidden">
    <% @payments.each do |payment| %>
      <%= render payment %>
      <p>
        <%= link_to "Show this payment", payment, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>

  <%# Large devices table %>
  <div id="payments" class="min-w-full
    hidden lg:flex lg:flex-col lg:items-center lg:justify-center">
    <table class="min-w-full">
      <thead>
        <tr>
          <th class="text-left">Contenedor</th>
          <th class="text-left">Monto</th>
          <th class="text-left">Fecha de pago</th>
          <th class="text-left">Forma de pago</th>
          <th class="text-left">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @payments.each do |payment| %>
          <tr>
            <td><%= payment.invoice.container&.number %></td>
            <td><%= payment.amount %></td>
            <td><%= payment.payment_date %></td>
            <td><%= payment.payment_means %></td>
            <td>
              <%= link_to payment, class: "text-blue-500", title: "Ver" do %>
                <i class="material-icons">visibility</i>
              <% end %>
              <%= link_to edit_payment_path(payment), class: "text-blue-500", title: "Editar" do %>
                <i class="material-icons">edit</i>
              <% end %>
              <%= link_to payment, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-500", title: "Eliminar" do %>
                <i class="material-icons">delete</i>
              <% end %>
              <%= link_to payment.invoice, class: "text-blue-500", title: "Ver factura" do %>
                <i class="material-icons">receipt</i>
              <% end %>

            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%# End large devices view %>
</div>
