<%# Payment details for small devices %>
<div class="flex flex-col gap-6 mt-6 mb-16 mx-auto">
  <h3 class="font-bold text-2xl text-center">Detalles del Pago</h3>

  <div class="border border-gray-300 rounded-lg shadow-lg p-4 bg-slate-200 my-2">
    <div class="flex flex-col gap-3">
      <div>
        <p class="text-sm font-medium text-gray-600">Contenedor:</p>
        <% if payment.invoice&.container %>
          <%= link_to payment.invoice.container do %>
            <p class="text-lg font-semibold text-blue-600 underline"><%= payment.invoice.container.number %></p>
          <% end %>
        <% else %>
          <p class="text-lg font-semibold text-gray-800">Sin contenedor asignado</p>
        <% end %>
      </div>

      <div>
        <p class="text-sm font-medium text-gray-600">Fecha de Pago:</p>
        <p class="text-lg font-semibold text-gray-800"><%= payment.payment_date.strftime("%d/%m/%y") %></p>
      </div>

      <div>
        <p class="text-sm font-medium text-gray-600">Monto:</p>
        <p class="text-lg font-semibold text-gray-800"><%= number_to_currency(payment.amount) %></p>
      </div>

      <div>
        <p class="text-sm font-medium text-gray-600">Forma de Pago:</p>
        <p class="text-lg font-semibold text-gray-800"><%= payment.payment_means %></p>
      </div>

      <div class="flex gap-4 mt-3">
        <%= link_to edit_payment_path(payment), class: "shadow-lg px-4 py-2 rounded-lg bg-blue-50 text-blue-500", title: "Editar" do %>
          <%= material_icon.shape(:edit) %>
        <% end %>

        <%= link_to payment, data: { turbo_method: :delete, turbo_confirm: "Â¿Eliminar este pago?" }, class: "shadow-lg px-4 py-2 rounded-lg bg-red-50 text-red-500", title: "Eliminar Pago" do %>
          <%= material_icon.shape(:delete) %>
        <% end %>

        <%= link_to payment.invoice, class: "shadow-lg px-4 py-2 rounded-lg bg-blue-50 text-blue-500", title: "Ver Factura" do %>
          <%= material_icon.shape(:receipt_long) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%# End payment details for small devices %>


