<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl mt-6">Nuevo Servicio</h1>

  <%= render "form", service: @service %>
  <% if @container %>
    <%= link_to "Regresar", container_path(@container), class: "btn-primary" %>
  <% else %>
    <%= link_to "Regresar", services_path, class: "btn-primary" %>
  <% end %>
</div>
