<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @service %>
    <% if @service.container.present? %>
      <%= link_to "Regresar", container_path(@service.container), class: "btn-primary" %>
    <% else %>
      <%= link_to "Regesar", services_path, class: "btn-primary" %>
    <% end %>
  </div>
</div>
