<div class="p-2 my-5 bg-white shadow-lg rounded-lg p-2 bg-sky-50">

  <p class="field">
    <strong class="font-medium">Cliente:</strong>
    <%= container.user.full_name %>
  </p>

  <p class="field">
    <strong class="font-medium">Número de Contenedor:</strong>
    <%= container.number %>
  </p>

  <p class="field">
    <strong class="font-medium">Tamaño:</strong>
    <%= container.size %>
  </p>

  <p class="field">
    <strong class="font-medium">Tipo de Contenedor:</strong>
    <%= container.container_type %>
  </p>

  <p class="field">
    <strong class="font-medium">Dueño de la Carga:</strong>
    <%= container.cargo_owner %>
  </p>

  <p class="field">
    <% entrada_move = container.moves.find_by(move_type: "Entrada") %>
      <% if entrada_move %>
        <strong class="font-medium">Entrada:</strong>
        <span><%= entrada_move.created_at.strftime("%d/%m/%Y") %></span>
      <% else %>
        Entrada: N/A
      <% end %>
  </p>

  <p class="field">
    <% salida_move = container.moves.find_by(move_type: "Salida") %>
      <% if salida_move %>
        <strong class="font-medium">Salida:</strong>
        <span><%= salida_move.created_at.strftime("%d/%m/%Y") %></span>
      <% else %>
        Salida: N/A
      <% end %>
  </p>

  <% reacomodo_moves = container.moves.where(move_type: "Reacomodo").order(:created_at) %>
<% if reacomodo_moves.any? %>
  <% reacomodo_moves.each do |move| %>
    <p class="field">
      Reacomodo:<%= move.created_at.strftime("%d/%m/%Y") %>
    </p>
  <% end %>
<% end %>

  <% lavado_move = container.moves.find_by(move_type: "Movimiento para lavado") %>
  <% if lavado_move %>
    <p class="field">
      <strong class="font-medium">Movimiento para lavado:</strong>
      <span><%= lavado_move.created_at.strftime("%d/%m/%Y") %></span>
    </p>
  <% end %>

</div>
