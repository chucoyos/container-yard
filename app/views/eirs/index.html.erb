<div class="flex flex-col gap-2 lg:ml-20 px-5 mb-20 mt-6">
  
  <% content_for :title, "Eirs" %>

  <div class="flex justify-between items-center">
    <h1 class="mx-auto">EIR</h1>
  </div>

  <div id="eirs" class="min-w-full">
    <% @eirs.each do |eir| %>
      <%= render eir %>
    <% end %>
  </div>
  <div class="my-4 flex justify-evenly items-center gap-4 border bg-blue-50 rounded-lg px-6 py-4">
    <%= paginate @eirs %>
  </div>
  
</div>
